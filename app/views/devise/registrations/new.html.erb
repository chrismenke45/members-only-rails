<div class="userForm flexVertCenter">
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flexVertCenter" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> char min)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions flexHorizCenter">
    <%= f.submit "Sign up", class: "navItem" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
